@{
    ViewData["Title"] = "FizzBuzz";
}
<style>
    body {
        background-color: #85FFBD;
        background-image: linear-gradient(0deg, #85FFBD 46%, #FFFB7D 100%);
    }
</style>

<br />
<h1 class="text-center">Find FizzBuzz</h1>
<br />
<form asp-action="FizzBuzz">
    <div class="row">
        <div class="col offset-1"></div>
        <div class="col-2"><input name="multipleInput1" placeholder="Enter First Multiple:" /></div>
        <div class="col offset-1"></div>
        <div class="col-2"><input name="rangeInput1" placeholder="Enter Start of Range:" /></div>
        <div class="col offset-1"></div>
    </div>
    <br />
    <div class="row">
        <div class="col offset-1"></div>
        <div class="col-2"><input name="multipleInput2" placeholder="Enter Second Multiple:" /></div>
        <div class="col offset-1"></div>
        <div class="col-2"><input name="rangeInput2" placeholder="Enter End of Range:" /></div>
        <div class="col offset-1"></div>
    </div>
    <br />
    <div class="row">
        <div class="col"><button type="submit" class="btn btn-outline-warning" style="width: 100%">Find FizzBuzz!</button></div>
    </div>
</form>
<br />
<hr />
<br />
<div class="row"><p>@ViewData["Output"]</p></div>